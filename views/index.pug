html
  head
    title="Todo App"
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/dashboard.css')
    script(src="/js/jquery-3.2.0.js")
    script(src="/js/bootstrap.min.js")
  body
    div(class='navbar navbar-inverse navbar-fixed-top')
      div(class='container-fluid')
        div(class='navbar-header')
          a(class='navbar-brand', href='/') Beautiful TODOs

    div(class='container-fluid' style='margin-top: 80px;')
      form(class="form-inline col-md-6 col-md-offset-3" action="/todos/add" method="post")
        div(class="form-group")
          label(for="titleInput") Tittel:
          input(type="text" class="form-control" id="titleInput" name="title" style="margin-left: 10px;")

        div(class="form-group")
          label(for="descriptionInput" style="margin-left: 20px;") Beskrivelse:
          input(type="text" class="form-control" id="descriptionInput" name="description" style="margin-left: 10px; width: 400px;")

        button(type="submit" class="btn btn-default") Legg til

    div(class='container-fluid' style='margin-top: 20px;')
      each todo in todos
        div(class='col-md-6 col-md-offset-3')
          div(class='panel panel-default container-panel')
            div(class='panel-heading')= todo.title
            div(class='panel-body')= todo.description
        